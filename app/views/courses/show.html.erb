<div class="page-header">
  <h3>Course #<%= @course.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @course.user.present? %>
          <a href="/users/<%= @course.user_id %>">
            <%= @course.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Assignment</dt>
      <dd><%= @course.assignment_id %></dd>

      <dt>Course name</dt>
      <dd><%= @course.course_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/courses" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @course.user %>
        <a href="/courses/<%= @course.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_course/<%= @course.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Course has many assignments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Assignments
      </li>

      <% @course.assignments.each do |assignment| %>
        <li class="list-group-item">
          <a href="/assignments/<%= assignment.id %>">
            <%= assignment.course_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/assignments/<%= assignment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/assignments/<%= assignment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_assignment/<%= assignment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_assignment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for course_id -->
      <input type="hidden" name="course_id" value="<%= @course.id %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for due_date -->
      <div class="form-group">
        <label for="due_date" class="control-label">
          Due date
        </label>

        <input type="text" id="due_date" name="due_date" placeholder="Due date" class="form-control" value="">
      </div>

      <!-- Label and input for assignment_name -->
      <div class="form-group">
        <label for="assignment_name" class="control-label">
          Assignment name
        </label>

        <input type="text" id="assignment_name" name="assignment_name" placeholder="Assignment name" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Assignment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
